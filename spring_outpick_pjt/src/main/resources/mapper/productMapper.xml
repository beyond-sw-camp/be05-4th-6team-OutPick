<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.encore.outpick.product.mapper.ProductMapper">
    <insert id="addProduct"
            parameterType="com.encore.outpick.product.domain.ProductDAO">
        INSERT INTO PRODUCT(category_id, name, price, stock, content, supplier, storage)
        VALUES(#{category_id}, #{name}, #{price}, #{stock}, #{content}, #{supplier}, #{storage})  
    </insert>
    <update id="modifyProduct"
            parameterType="com.encore.outpick.product.domain.ProductDAO">
        UPDATE PRODUCT
        SET
            CATEGORY_ID = #{category_id},
            NAME = #{name},
            PRICE = #{price},
            STOCK = #{content},
            SUPPLIER = #{supplier},
            STORAGE = #{storage}
        WHERE
            product_id = #{product_id}
    </update>
    <delete id="deleteProduct"
            parameterType="java.lang.Long">
        DELETE FROM PRODUCT
        WHERE
            PRODUCT_ID = #{product_id}    
    </delete>
    <select id="findByName"
            parameterType="java.lang.Long"
            resultType="com.encore.outpick.product.domain.ProductDAO">
        SELECT
                
    </select>
</mapper> 